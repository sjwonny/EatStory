	<!-- 찜목록 출력 -->
	<select id="printWish" parameterType="int" resultType="map">
   	 SELECT 
    b.name AS brand_name,w.no,i.img AS store_img, g.name,g.dc_price, o.detail,
   	 o.price, g.delivery_price,
   	 g.free_condition
  	  FROM brand b, goods_img i, goods g, goods_option o, wish w 
  	  WHERE 
  	  w.users_no = #{users_no}
  	  AND g.brand_no = b.no <!-- 이거 있어야함 -->
  	  AND w.goods_option_no = o.no
 	   AND w.goods_no = g.no
 	   AND g.no = i.goods_no 
 	   AND g.no = o.goods_no 
 	   AND i.seq = 1
	</select> 
	


	<!-- 찜 목록에서 항목 제거 -->
